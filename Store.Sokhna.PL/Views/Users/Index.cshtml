@model IEnumerable<Users>

@{
    ViewData["Title"] = "Users";
    var Role = TempData["Role"] as string;
}
<div class="container">
    <h2 class="text-center my-4">الموظفين</h2>
    <br />
    <br />
    <div class="d-flex justify-content-between">
    <a asp-controller="Users" asp-action="Create" class="btn btn-primary">اضافه موظف</a>
    <a asp-controller="Users" asp-action="Deleted" class="btn btn-danger">استرجاع موظف</a>
    </div>
    <br />
    <br />
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>الرقم القومي</td>
                        <td>الاسم</td>
                        <td>الوظيفه</td>
                        <td>رقم الهاتف</td>
                        <td>تاريخ التوظيف</td>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.SSN</td>
                                <td>@user.FullName</td>
                                <td>@user.Job</td>
                                <td>@user.Phone</td>
                                <td>@user.DateofEmployed</td>
                                <td>
                                <a asp-controller="Users" asp-action="Details" asp-route-id="@user.SSN" class="btn btn-secondary">
                                        <i class="fas fa-eye"></i> تفاصيل
                                    </a>
                                </td>
                                <td>
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.SSN" class="btn btn-primary">
                                        <i class="fas fa-edit"></i> تعديل
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.SSN" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> حذف
                                    </a>
                                </td>
                            </tr>
                        }
                </tbody>
            </table>
        }
        else
        {
        <div class="mt-4 alert alert-warning">
            <h4>لا يوجد موظفين</h4>
        </div>
        }
    </div>
</div>
