@model Expenses
@{
    ViewData["Title"] = "Details";
    var Role = TempData["Role"] as string;
}

<h1>تفاصيل</h1>
<br />
<div>
    <div class="form-group" hidden>
        <label asp-for="Exp_ID" class="col-form-label">Expenses ID</label>
        <input readonly asp-for="Exp_ID" class="form-control" />
        <span asp-validation-for="Exp_ID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Engineer.FullName" class="col-form-label">اسم المهندس</label>
        <input readonly asp-for="Engineer.FullName" class="form-control" />
        <span asp-validation-for="Engineer.FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Value" class="col-form-label">المبلغ</label>
        <input readonly asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Details" class="col-form-label">تفاصيل</label>
        <input readonly asp-for="Details" class="form-control" />
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note" class="col-form-label">ملحوظات</label>
        <input readonly asp-for="Note" class="form-control" />
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfAdding" class="col-form-label">تاريخ الاضافه</label>
        <input readonly asp-for="DateOfAdding" class="form-control" />
        <span asp-validation-for="DateOfAdding" class="text-danger"></span>
    </div>
    <br />
    <a asp-action="Edit" asp-route-id="@Model.Exp_ID" class="btn btn-primary">تعديل</a>
    <a asp-action="Index" class="btn btn-info">عوده الي القائمه</a>
</div>
