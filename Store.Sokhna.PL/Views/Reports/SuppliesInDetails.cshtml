    @model IEnumerable<SuppliesInIndex>
@{
    ViewData["Title"] = "SuppliesInDetails";
    Layout = "~/Views/Shared/_ReportsLayout.cshtml";
}

<h2 class="text-center my-4">تقارير موردين</h2>
<br />
<br />
<div class="row">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>مورد</td>
                    <td>المبلغ المطلوب</td>
                    <td>المبلغ المدفوع</td>
                    <td>Rباقي المبلغ</td>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(M => expense.Importer)</td>
                        <td>$@Html.DisplayFor(M => expense.ValueNeed)</td>
                        <td>$@Html.DisplayFor(M => expense.ValueTake)</td>
                        <td>$@(expense.ValueNeed - expense.ValueTake)</td>
                        <td>
                            <a asp-action="SuppliesInReport" asp-route-id="@expense.Importer" class="btn btn-secondary">
                                <i class="fas fa-eye"></i> تفاصيل
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="mt-4 alert alert-warning">
            <h4>لا يوجد موردين</h4>
        </div>
    }
</div>