@model Users
@{
    ViewData["Title"] = "Update Employee";
    var Role = TempData["Role"] as string;
}
<h1>تعديل موظف</h1>
<br />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <div class="form-group">
        <label asp-for="SSN" class="col-form-label">الرقم القومي</label>
        <input asp-for="SSN" readonly class="form-control" />
        <span asp-validation-for="SSN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FullName" class="col-form-label">الاسم رباعي</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Job" class="col-form-label">الوظيفه</label>
        <select asp-for="Job" class="form-control">
            <option value="@null">-----Select Unit-----</option>
            <option value="Manager">Manager</option>
            <option value="Financial Manager">Financial Manager</option>
            <option value="Accountant">Accountant</option>
            <option value="Engineer">Engineer</option>
        </select>
        <span asp-validation-for="Job" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="col-form-label">رقم الهاتف</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateofEmployed" class="col-form-label">تاريخ التوظيف</label>
        <input asp-for="DateofEmployed" value="@DateTime.Parse(Model.DateofEmployed)" type="date" class="form-control" />
        <span asp-validation-for="DateofEmployed" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="تعديل" class="btn btn-primary" />
    <a asp-controller="Users" asp-action="Index" class="btn btn-info">عوده الي القائمه</a>
</form>

