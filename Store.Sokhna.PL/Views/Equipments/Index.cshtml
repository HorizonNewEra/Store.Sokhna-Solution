@model IEnumerable<Equipments>

@{
    ViewData["Title"] = "Equipments";
    var Role = TempData["Role"] as string;
}
<div class="container">
    <h2 class="text-center my-4">المعدات</h2>
    <br />
    <br />
    <a asp-action="Create" class="btn btn-primary">اضافه معدات</a>
    <br />
    <br />
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>اسم المهندس</td>
                        <td>اسم المعده</td>
                        <td>المورد</td>
                        <td>سعر الساعه</td>
                        <td>عدد الساعات</td>
                        <td>السعر الكلي</td>
                        <td>تاريخ الاضافه</td>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pact in Model)
                         {
                            <tr>
                                <td>@Html.DisplayFor(M => pact.Engineer.FullName)</td>
                                <td>@Html.DisplayFor(M => pact.Name)</td>
                                <td>@Html.DisplayFor(M => pact.Importer)</td>
                                <td>@Html.DisplayFor(M => pact.HourPrice)</td>
                                <td>@Html.DisplayFor(M => pact.HourCount)</td>
                                <td>$@(Math.Round(pact.HourPrice * pact.HourCount,2))</td>
                                <td>@Html.DisplayFor(M => pact.DateOfAdding)</td>
                                <td>
                                <a asp-action="Details" asp-route-id="@pact.Eq_ID" class="btn btn-secondary">
                                        <i class="fas fa-eye"></i> تفاصيل
                                    </a>
                                </td>
                                <td>
                                <a asp-action="Edit" asp-route-id="@pact.Eq_ID" class="btn btn-primary">
                                        <i class="fas fa-edit"></i> تعديل
                                    </a>
                                </td>
                                <td>
                                <a asp-action="Delete" asp-route-id="@pact.Eq_ID" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> حذف
                                    </a>
                                </td>

                            </tr>
                        }
                </tbody>
            </table>    
        }
        else
        {
        <div class="mt-4 alert alert-warning">
                <h4>لا يوجد معدات</h4>
        </div>
        }
    </div>
</div>
