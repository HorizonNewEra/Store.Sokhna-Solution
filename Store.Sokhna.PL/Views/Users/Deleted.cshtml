@model IEnumerable<Users>

@{
    ViewData["Title"] = "Users";
    var Role = TempData["Role"] as string;
}
<div class="container">
    <h2 class="text-center my-4">الموظفين</h2>
    <br />
    <br />
    <a asp-controller="Users" asp-action="Index" class="btn btn-info">عوده الي القائمه</a>
    <br />
    <br />
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>الرقم القومي</td>
                        <td>الاسم</td>
                        <td>الوظيفه</td>
                        <td>رقم الهاتف</td>
                        <td>تاريخ التوظيف</td>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.SSN</td>
                                <td>@user.FullName</td>
                                <td>@user.Job</td>
                                <td>@user.Phone</td>
                                <td>@user.DateofEmployed</td>
                                <td>
                                <a asp-controller="Users" asp-action="Restore" asp-route-id="@user.SSN" class="btn btn-secondary">
                                        <i class="fas fa-eye"></i> إسترجاع
                                    </a>
                                </td>
                            </tr>
                        }
                </tbody>
            </table>    
        }
        else
        {
        <div class="mt-4 alert alert-warning">
            <h4>لا يوجد موظفين</h4>
        </div>
        }
    </div>
</div>
