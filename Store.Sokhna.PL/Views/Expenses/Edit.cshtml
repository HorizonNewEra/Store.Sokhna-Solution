@model Expenses
@{
    ViewData["Title"] = "Update Expenses";
    var Role = TempData["Role"] as string;
    var USSN = TempData["SSN"] as string;
    var Uname = TempData["FullName"] as string;
}
<h1>Update Expenses</h1>
<br />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <div hidden>
        <input readonly asp-for="Exp_ID" class="form-control" />
        <input readonly asp-for="SSN" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Value" class="col-form-label">المبلغ</label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Details" class="col-form-label">تفاصيل</label>
        <input asp-for="Details" class="form-control" />
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note" class="col-form-label">ملحوظات</label>
        <input asp-for="Note" class="form-control" />
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">اسم المهندس</label>
        <input type="text" readonly value="@Uname" class="form-control" />
        <input type="text" asp-for="SSN" hidden readonly value="@USSN" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfAdding" class="col-form-label">تاريخ الاضافه</label>
        <input asp-for="DateOfAdding" readonly class="form-control" />
        <span asp-validation-for="DateOfAdding" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="تعديل" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-info">عوده الي القائمه</a>
</form>

