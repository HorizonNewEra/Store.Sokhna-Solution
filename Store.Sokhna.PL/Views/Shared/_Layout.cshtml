
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Store.Sokhna.PL.styles.css" asp-append-version="true" />
</head>
<body dir="rtl">
    @{
        var Role = TempData["Role"] as string;
        //Manager  Accountant  Engineer
    }
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">El Salah</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (Role == "Financial Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-info m-2" asp-area="" asp-controller="Financials" asp-action="Index">القائمه الرئيسية</a>
                            </li>
                        }
                        @if (Role == "Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-warning m-2" asp-area="" asp-controller="Users" asp-action="Index">مهندسين</a>
                            </li>
                        }
                        @if (Role == "Manager" || Role == "Financial Manager" || Role == "Accountant")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-warning m-2" asp-area="" asp-controller="Reports" asp-action="Index">تقارير</a>
                            </li>
                        }
                        @if (Role == "Engineer" || Role == "Accountant")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-info m-2" asp-area="" asp-controller="Pact" asp-action="Index">عهد</a>
                            </li>
                        }
                        @if (Role == "Accountant")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-info m-2" asp-area="" asp-controller="Importer" asp-action="Index">موردين</a>
                            </li>
                        }
                        @if (Role == "Engineer")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-warning m-2" asp-area="" asp-controller="Expenses" asp-action="Index">نثريات</a>
                            </li>
                        }
                        @if (Role == "Engineer")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-warning m-2" asp-area="" asp-controller="Equipments" asp-action="Index">معدات</a>
                            </li>
                        }
                        @if (Role == "Engineer" || Role == "Accountant")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-info m-2" asp-area="" asp-controller="Supplies_Income" asp-action="Index">دفعات موردين</a>
                            </li>
                        }
                        @if (Role == "Engineer")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-warning m-2" asp-area="" asp-controller="Supplies_Outcome" asp-action="Index">توريدات</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-danger m-2" asp-area="" asp-controller="Account" asp-action="SignOut">تسجيل خروج</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top mb-2">
        <div class="container text-center">
            &copy;@DateTime.Now.Year - Horizon
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
