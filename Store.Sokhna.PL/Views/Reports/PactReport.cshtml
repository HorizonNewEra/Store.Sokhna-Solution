    @model IEnumerable<PactIndex>
@{
    ViewData["Title"] = "PactsReport";
    Layout = "~/Views/Shared/_ReportsLayout.cshtml";
}

<h2 class="text-center my-4">تقارير مهندسين</h2>
<br />
<br />
<div class="row">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>اسم المهندس</td>
                    <td>مبلغ العهد</td>
                    <td>المصروفات</td>
                    <td>الباقي</td>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(M => expense.FullName)</td>
                        <td>$@Html.DisplayFor(M => expense.PactValue)</td>
                        <td>$@Html.DisplayFor(M => expense.RestValue)</td>
                        <td>$@(expense.PactValue - expense.RestValue)</td>
                        <td>
                            <a asp-action="PactDetails" asp-route-id="@expense.SSN" class="btn btn-secondary">
                                <i class="fas fa-eye"></i> تفاصيل
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="mt-4 alert alert-warning">
            <h4>لا يوجد مهندسين</h4>
        </div>
    }
</div>


