@model IEnumerable<Expenses>

@{
    ViewData["Title"] = "Expenses";
    var Role = TempData["Role"] as string;
}
<div class="container">
    <h2 class="text-center my-4">نثريات</h2>
    <br />
    <br />
    <a asp-action="Create" class="btn btn-primary">اضافه نثريات</a>
    <br />
    <br />
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>اسم المهندس</td>
                        <td>المبلغ</td>
                        <td>تفاصيل نثريات</td>
                        <td>ملحوظات</td>
                        <td>تاريخ الاضافه</td>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model)
                         {
                            <tr>
                            <td>@Html.DisplayFor(M => expense.Engineer.FullName)</td>
                            <td>@Html.DisplayFor(M => expense.Value)</td>
                            <td>@Html.DisplayFor(M => expense.Details)</td>
                            <td>@Html.DisplayFor(M => expense.Note)</td>
                            <td>@Html.DisplayFor(M => expense.DateOfAdding)</td>
                                <td>
                                <a asp-action="Details" asp-route-id="@expense.Exp_ID" class="btn btn-secondary">
                                        <i class="fas fa-eye"></i> تفاصيل
                                    </a>
                                </td>
                                <td>
                                <a asp-action="Edit" asp-route-id="@expense.Exp_ID" class="btn btn-primary">
                                        <i class="fas fa-edit"></i> تعديل
                                    </a>
                                </td>
                                <td>
                                <a asp-action="Delete" asp-route-id="@expense.Exp_ID" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> حذف
                                    </a>
                                </td>

                            </tr>
                        }
                </tbody>
            </table>    
        }
        else
        {
        <div class="mt-4 alert alert-warning">
                <h4>لا يوجد نثريات</h4>
        </div>
        }
    </div>
</div>
